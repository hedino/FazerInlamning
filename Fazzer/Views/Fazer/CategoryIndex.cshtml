@model Fazzer.ViewModels.CategoryIndexViewModel
@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "CategoryCreate")
</p>
<table class="table">
    <tr>

    </tr>
    @foreach (var item in Model.Categories)
    {
        <tr>
            <td>@item.Name</td>

            <td>
                @Html.ActionLink("Edit", "CategoryEdit", new { id = item.CategoryId }) |
                @Html.ActionLink("View", "CategoryView", new { id = item.CategoryId })
            </td>
        </tr>
    }
</table>

<h1>Search</h1>
@using (Html.BeginForm("Search", "Category", FormMethod.Get))
{
    <table class="table">
        <tr>

        </tr>
        <tr>
            <td>Category</td>
            <td>
                @Html.TextBoxFor(p => p.SearchCategory)
            </td>
        </tr>
    </table>
    <input type="submit" value="Search" />

}